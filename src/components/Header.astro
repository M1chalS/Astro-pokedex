---
import astroSvg from '../assets/astro.svg';

let {showIcon = true} = Astro.props;
---

<header class="text-3xl w-full uppercase py-4">
    <div class="flex flex-row items-center md:justify-center relative h-16">
        {showIcon && <a href="/"><img src={astroSvg} alt="Astro" class="h-16"/></a>}
        <h1 class="text-2xl md:text-4xl font-bold">
            <a href="/"><slot>stro<br class="visible sm:hidden"> pokedex</slot></a>
        </h1>
        <div class="absolute right-4">
            <a href="/" class="text-base md:text-xl justify-self-end">Home</a>
            <a href="/about" class="text-base md:text-xl mx-1 justify-self-end">About</a>
            <a href="https://github.com/M1chalS/Astro-pokedex" class="text-base md:text-xl justify-self-end" target="_blank">GitHub</a>
        </div>
    </div>
    <hr class="mt-4 border-black"/>
</header>